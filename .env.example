# MongoDB Connection
MONGODB_URI=your-mongodb-connection-string-here

# JWT Secret Key - Change this to a strong random string
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration Time
JWT_EXPIRES_IN=7d

# Server Port
PORT=3000

# Brevo (Sendinblue) Email Configuration
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@bebrand.com
BREVO_SENDER_NAME=BeBrand

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3001

# Backend URL
BACKEND_URL=https://bebrand-eoo2.onrender.com

# Paystack Payment Configuration
# Get your keys from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=your-paystack-public-key-here
PAYSTACK_CALLBACK_URL=https://bebrand-eoo2.onrender.com/payment/callback
